    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug aria_move (Linux/Fedora)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/aria_move",
            "args": ["--dry-run", "example-task", "1", "/tmp/example.file"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "info"
            },
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'aria_move'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=aria_move"
                ],
                "filter": {
                    "name": "aria_move",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'aria_move'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=aria_move",
                    "--package=aria_move"
                ],
                "filter": {
                    "name": "aria_move",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'aria_move'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=aria_move",
                    "--package=aria_move"
                ],
                "filter": {
                    "name": "aria_move",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}